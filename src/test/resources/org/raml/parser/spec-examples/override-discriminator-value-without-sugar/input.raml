#%RAML 1.0
title: My API With Types
types:
  Person:
    type: object
    discriminator: kind
    properties:
      name: 
        type: string
      kind: 
        type: string
  Employee:
    type: Person
    discriminatorValue: employee # override default
    properties:
      employeeId: 
        type: string
  User:
    type: Person
    discriminatorValue: user # override default
    properties:
      userId: 
        type: string