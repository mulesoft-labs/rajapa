#%RAML 1.0
title: My API With Types
types:
  Person:
    type: object
    discriminator: kind # refers to the `kind` property of object `Person`
    properties:
      kind: string # contains name of the kind of a `Person` instance
      name: string
  Employee: # kind can equal `Employee`; default value for `discriminatorValue`
    type: Person
    properties:
      employeeId: integer
  User: # kind can equal `User`; default value for `discriminatorValue`
    type: Person
    properties:
      userId: integer
    discriminatorValue: user

/resource:
  get:
    responses:
      200:
        body:
          application/json:
            type: Person
            examples:
              good:
                kind: Employee
                employeeId: 1
                name: Santiago
              good1:
                kind: user
                userId: 1
                name: Leandro